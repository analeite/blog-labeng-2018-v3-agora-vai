<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="br.com.fatec.blog.pojo.User" table="user_blog">
		<id name="username">
			<column name="username" length="30" />
		</id>
		<property name="password" column="password" length="30" />
		<property name="firstName" column="first_name" length="30" />
		<property name="lastName" column="last_name" length="30" />
		<property name="birth" column="birth" />
		<property name="cell" column="cell" length="15" />
		<property name="emailId" column="email_id" length="35" />
	</class>
</hibernate-mapping>